<!DOCTYPE html>
<html>
<head>
  <title>View Client</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }
    
    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    td{
      font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }

    th{
      font-family: 'Poppins',sans-serif;
    }
    
    @media screen and (max-width: 600px) {
      table {
        overflow-x: auto;
        display: block;
      }
    
      thead {
        display: block;
      }
    
      tbody {
        display: block;
        width: auto;
        position: relative;
        overflow-y: auto;
        height: 250px;
      }
    
      tr {
        display: block;
      }
    
      td {
        display: block;
        text-align: right;
      }
    }
  </style>
</head>
<body>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% formData.forEach(function(item) { %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.email %></td>
        <td><%= item.city %></td>
        <td>
          <button>Edit</button>
          <button>Delete</button>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
